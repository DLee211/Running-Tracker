@model Exercise

<h2>Edit Exercise</h2>

<form asp-controller="Exercise" asp-action="UpdateExercise" method="post">
<input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="DateStart"></label>
        <input asp-for="DateStart" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateEnd"></label>
        <input asp-for="DateEnd" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Comments"></label>
        <input asp-for="Comments" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>